        <div class="conversion-form">
          <input type="number" id="inputCooking" placeholder="Value" />
          <select id="fromCooking">
            <option value="c Metric">Metric Cups</option>
            <option value="c US">US Cups</option>
            <option value="c Imperial">Imperial Cups</option>
            <option value="tbsp Metric">Metric Tablespoon</option>
            <option value="tbsp US">US Tablespoon</option>
            <option value="tbsp Imperial">Imperial Tablespoon</option>
            <option value="tsp Metric">Metric Teaspoon</option>
            <option value="tsp US">US Teaspoon</option>
            <option value="tsp Imperial">Imperial Teaspoon</option>
            <option value="ml">Milliliters</option>
            <option value="g">Grams</option>
          </select>
          <span>to</span>
          <select id="toCooking">
            <option value="c Metric">Metric Cups</option>
            <option value="c US">US Cups</option>
            <option value="c Imperial">Imperial Cups</option>
            <option value="tbsp Metric">Metric Tablespoon</option>
            <option value="tbsp US">US Tablespoon</option>
            <option value="tbsp Imperial">Imperial Tablespoon</option>
            <option value="tsp Metric">Metric Teaspoon</option>
            <option value="tsp US">US Teaspoon</option>
            <option value="tsp Imperial">Imperial Teaspoon</option>
            <option value="ml">Milliliters</option>
            <option value="g">Grams</option>
          </select>
          <button id="convertCookingBtn">Convert</button>
        </div>
