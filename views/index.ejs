            <option value="kPa">Kilopascals</option>
            <option value="bar">Bar</option>
            <option value="torr">Torr</option>
            <option value="psi">Pounds per square inch</option>
            <option value="atm">Standard Atmosphere</option>
            <option value="inHg">Inches Mercury</option>
            <option value="mmHg">Millimeter Mercury</option>
          </select>
          <span>to</span>
          <select id="toPressure">
            <option value="Pa">Pascals</option>
            <option value="kPa">Kilopascals</option>
            <option value="bar">Bar</option>
            <option value="torr">Torr</option>
            <option value="psi">Pounds per square inch</option>
            <option value="atm">Standard Atmosphere</option>
            <option value="inHg">Inches Mercury</option>
            <option value="mmHg">Millimeter Mercury</option>
          </select>
          <button id="convertPressureBtn">Convert</button>
        </div>
        <div id="resultPressure">Result will be displayed here</div>
      </div>
