  <body>
    <header>
      <div class="title">
        <span style="--i: 1">U</span>
        <span style="--i: 2">N</span>
        <span style="--i: 3">I</span>
        <span style="--i: 4">T</span>
        <span style="--i: 5">*</span>
        <span style="--i: 6">C</span>
        <span style="--i: 7">O</span>
        <span style="--i: 8">N</span>
        <span style="--i: 9">V</span>
        <span style="--i: 010">E</span>
        <span style="--i: 11">R</span>
        <span style="--i: 12">T</span>
        <span style="--i: 13">E</span>
        <span style="--i: 13">R</span>
      </div>
    </header>

    <main>
      <div class="temperature">
        <h2>Temperature</h2>

        <div class="conversion-form">
          <input type="number" id="inputValue" placeholder="Value" />
          <select id="fromUnit">
            <option value="F">Farenheit</option>
            <option value="C">Celsius</option>
            <option value="K">Kelvin</option>
          </select>
          <span>to</span>
          <select id="toUnit">
            <option value="F">Farenheit</option>
            <option value="C">Celsius</option>
            <option value="K">Kelvin</option>
          </select>
          <button id="convertBtn">Convert</button>
        </div>
        <div id="result">Result will be displayed here</div>
      </div>

      <div class="length">
        <h2>Length</h2>
        <div class="conversion-form">
          <input type="number" min="0" id="inputLength" placeholder="Value" />
          <select id="fromLength">
            <option value="km">Kilometers</option>
            <option value="m">Meters</option>
            <option value="dm">Decimeters</option>
            <option value="cm">Centimeters</option>
            <option value="mm">Millimeter</option>
            <option value="µm">Micrometers</option>
            <option value="nm">Nanometers</option>
            <option value="pm">Picometers</option>
            <option value="mi">Miles</option>
            <option value="yd">Yards</option>
            <option value="ft">Feet</option>
            <option value="in">Inches</option>
          </select>
          <span>to</span>
          <select id="toLength">
            <option value="km">Kilometers</option>
            <option value="m">Meters</option>
            <option value="dm">Decimeters</option>
            <option value="cm">Centimeters</option>
            <option value="mm">Millimeter</option>
            <option value="µm">Micrometers</option>
            <option value="nm">Nanometers</option>
            <option value="pm">Picometers</option>
            <option value="mi">Miles</option>
            <option value="yd">Yards</option>
            <option value="ft">Feet</option>
            <option value="in">Inches</option>
          </select>
          <button id="convertLengthBtn">Convert</button>
        </div>
        <div id="resultLength">Result will be displayed here</div>
      </div>

      <div class="weight">
        <h2>Weight</h2>
        <div class="conversion-form">
          <input type="number" min="0" id="inputWeight" placeholder="Value" />
          <select id="fromWeight">
            <option value="t">Tonnes</option>
            <option value="kg">Kilograms</option>
            <option value="gm">Grams</option>
            <option value="mg">Milligrams</option>
            <option value="µg">Micrograms</option>
            <option value="ng">Nanograms</option>
            <option value="pg">Picograms</option>
            <option value="tn">US Tons</option>
            <option value="lb">Pounds</option>
            <option value="oz">Ounces</option>
            <option value="st">Stone</option>
          </select>
          <span>to</span>
          <select id="toWeight">
            <option value="t">Tonnes</option>
            <option value="kg">Kilograms</option>
            <option value="gm">Grams</option>
            <option value="mg">Milligrams</option>
            <option value="µg">Micrograms</option>
            <option value="ng">Nanograms</option>
            <option value="pg">Picograms</option>
            <option value="tn">US Tons</option>
            <option value="lb">Pounds</option>
            <option value="oz">Ounces</option>
            <option value="st">Stone</option>
          </select>
          <button id="convertWeightBtn">Convert</button>
        </div>
        <div id="resultWeight">Result will be displayed here</div>
      </div>

      <div class="liquid">
        <h2>Liquid</h2>
        <div class="conversion-form">
          <input type="number" min="0" id="inputLiquid" placeholder="Value" />
          <select id="fromLiquid">
            <option value="L">Liter</option>
            <option value="ml">Milliliter</option>
            <option value="µL">Microliter</option>
            <option value="nL">Nanoliter</option>
            <option value="pL">Picoliter</option>
            <option value="US gal">US Gallon</option>
            <option value="US qt">US Quart</option>
            <option value="US pt">US Pint</option>
            <option value="US fl.oz.">US Fluid Ounce</option>
            <option value="Imp. gal.">Imperial Gallon</option>
            <option value="Imp. qt.">Imperial Quart</option>
            <option value="Imp. pt.">Imperial Pint</option>
            <option value="Imp fl.oz.">Imperial Fluid Ounce</option>
          </select>
          <span>to</span>
          <select id="toLiquid">
            <option value="L">Liter</option>
            <option value="ml">Milliliter</option>
            <option value="µL">Microliter</option>
            <option value="nL">Nanoliter</option>
            <option value="pL">Picoliter</option>
            <option value="US gal">US Gallon</option>
            <option value="US qt">US Quart</option>
            <option value="US pt">US Pint</option>
            <option value="US fl.oz.">US Fluid Ounce</option>
            <option value="Imp. gal.">Imperial Gallon</option>
            <option value="Imp. qt.">Imperial Quart</option>
            <option value="Imp. pt.">Imperial Pint</option>
            <option value="Imp fl.oz.">Imperial Fluid Ounce</option>
          </select>
          <button id="convertLiquidBtn">Convert</button>
        </div>
        <div id="resultLiquid">Result will be displayed here</div>
      </div>

      <!--To be done -->
